{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Build Project",
			"command": "cmake",
			"args": [
				"--build",
				"${command:cmake.buildDirectory}",
				"-j",
				"20"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "Clean Project",
			"command": "cmake",
			"args": [
				"--build",
				"${command:cmake.buildDirectory}",
				"--target",
				"clean"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "Flash Firmware",
			"command": "st-flash",
			"args": [
				"write",
				"${command:cmake.buildDirectory}/*.bin",
				"0x8000000"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "Reset Device",
			"command": "st-flash",
			"args": [
				"reset"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "Build Book",
			"command": "mdbook",
			"args": [
				"build"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "Serve Book",
			"command": "mdbook",
			"args": [
				"serve",
				"--open",
				"--port",
				"8000"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		}
	]
}
